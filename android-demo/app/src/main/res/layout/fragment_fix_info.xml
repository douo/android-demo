<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    android:transitionName="fix_info">

    <TextView
        android:id="@+id/fix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:background="#FFA00F00"
        android:padding="16dp"
        android:textIsSelectable="true"
        android:transitionName="fix"
        tools:text="No Fix" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fix"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:text="39.889615" />

    <TextView
        android:id="@+id/lon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lat"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:text="116.461972" />

    <TextView
        android:id="@+id/label_alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lon"
        android:text="@string/label_alt" />

    <TextView
        android:id="@+id/alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_alt"
        android:layout_marginTop="105dp"
        android:layout_toEndOf="@+id/label_alt"
        android:layout_toRightOf="@+id/label_alt"
        android:text="海拔" />


    <TextView
        android:id="@+id/label_bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/label_alt"
        android:text="@string/label_bearing" />

    <TextView
        android:id="@+id/bearing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_bearing"
        android:layout_toEndOf="@id/label_bearing"
        android:layout_toRightOf="@id/label_bearing"
        android:text="方位" />

    <TextView
        android:id="@+id/label_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/label_bearing"
        android:text="@string/label_speed" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_speed"
        android:layout_alignBottom="@+id/label_speed"
        android:layout_toEndOf="@+id/label_bearing"
        android:layout_toRightOf="@+id/label_bearing"
        android:text="速度" />

    <TextView
        android:id="@+id/label_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/label_speed"
        android:text="@string/label_accuracy" />

    <TextView
        android:id="@+id/accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_accuracy"
        android:layout_alignBottom="@+id/label_accuracy"
        android:layout_toEndOf="@+id/label_accuracy"
        android:layout_toRightOf="@+id/label_accuracy"
        android:text="精度" />


</RelativeLayout>